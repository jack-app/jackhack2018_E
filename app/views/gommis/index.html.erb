<p id="notice"><%= notice %></p>

<h1>Gommis</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Explanation</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gommis.each do |gommi| %>
      <tr>
        <td><%= gommi.title %></td>
        <td><%= gommi.explanation %></td>
        <td><%= gommi.kind %></td>
        <td><%= link_to 'Show', gommi %></td>
        <td><%= link_to 'Edit', edit_gommi_path(gommi) %></td>
        <td><%= link_to 'Destroy', gommi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

